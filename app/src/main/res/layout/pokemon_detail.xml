<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <include layout="@layout/pokemon_basic" android:id="@+id/pokemon_basic_container"
                 app:layout_constraintBottom_toBottomOf="@id/textView_pokemon_dateTime"></include>

        <TextView
                android:id="@+id/textView_pokemon_dateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/seven_grid_unit"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="MY POKEMON WEIGHT"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large_material"
                app:layout_constraintTop_toBottomOf="@+id/pokemon_basic_container"
                tools:layout_editor_absoluteX="56dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
